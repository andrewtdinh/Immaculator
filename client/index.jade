doctype html
html
  head
    meta(charset='utf-8')      
    title SimpleCalc
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    #calculator
      #output
        #display 0
      #buttons
        .row
          button#clear AC
          button#sign &plusmn;
          button#percent &#37;
          button.operator &#247;
        .row
          button.number 7
          button.number 8
          button.number 9
          button.operator &times;
        .row
          button.number 4
          button.number 5
          button.number 6
          button.operator &#8211;
        .row
          button.number 1
          button.number 2
          button.number 3
          button.operator +
        .row
          button.number#zero 0
          button#decimal .
          button#equal =

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
